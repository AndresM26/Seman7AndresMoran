<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Seman7AndresMoran.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Bienevenido al sistema" />
            <Label Text="Nombre:" />
            <Entry x:Name="Nombre" Placeholder="Ingrese Nombre"></Entry>
            <Label Text="Usuario:" />
            <Entry x:Name="Usuario" Placeholder="Ingrese Usario" Keyboard="Email"></Entry>
            <Label Text="Contrasea:" />
            <Entry x:Name="Contrasenia" Placeholder="Ingrese Usario" IsPassword="True"></Entry>

            <Button x:Name="btn_agregar" Text="Agregar" Clicked="btn_agregar_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>